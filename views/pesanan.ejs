<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pesanan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body class="bg-secondary" >

    <div class="container mt-5">
        <div class="row justify-content-center mb-2">
          <div style="width: 60%">
            <h1 class="text-center bg-light rounded shadow pb-2" style="width: 100;" >Pesanan</h1>
          </div>
        </div>
        <div class="row" id="container">
          <% for(pesan of dataPesan) { %>
          <div class="col-md-4 mb-2" id="pesan<%= pesan.id %>" >
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between ">
                      <h5 class="card-title"><%= pesan.nama %></h5>
                      <div>
                        <button class="badge bg-danger buttonHapus" data-id="<%= pesan.id %>" >X</button>
                      </div>
                    </div>
                    <p class="card-text"><%= pesan.pesan   %></p>
                </div>
            </div>
          </div>
          <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script src="/js/pesanan.js" ></script>
  </body>
</html>